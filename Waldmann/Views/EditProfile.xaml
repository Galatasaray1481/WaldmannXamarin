<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Waldmann.Views.EditProfile"
             BackgroundColor="#FFDEDEDE">
    <NavigationPage.TitleView>
        <Label HorizontalOptions="End"
           VerticalOptions="Start" 
               TextColor="White"
                x:Name="xCash"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Image x:Name="BTEditProfile"/>
            <Entry Placeholder="Name" x:Name="entName" />
            <Entry Placeholder="E-Mail" x:Name="entEmail" />
            <Entry Placeholder="Passwort" x:Name="entPassword" IsPassword="True"/>
            <Entry Placeholder="Passwort bestätigen" x:Name="entConfPassword" IsPassword="True"/>
                <Button Text="Ändern" x:Name="btnAendern" Clicked="aender_click" TextColor="White" BackgroundColor="#E74C3C"/>
                <Button Text="Konto Löschen" x:Name="btnLoeschen" Clicked="loeschen_click" TextColor="White" BackgroundColor="#E74C3C"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>