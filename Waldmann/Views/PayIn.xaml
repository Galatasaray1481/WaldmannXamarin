<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Waldmann.Views.PayIn"
             BackgroundColor="#FFDEDEDE">
    <NavigationPage.TitleView>
        <Label HorizontalOptions="End"
           VerticalOptions="Start" 
               TextColor="White"
                x:Name="xCash"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Image x:Name="BTPayIn"/>
            <Label Text="Betrag:" 
           HorizontalOptions="Start"
           VerticalOptions="Start" />
            <Entry Placeholder="€" x:Name="entCash" />
                <Button Text="Einzahlen" x:Name="btnPayIn" Clicked="payIn_click" TextColor="White" BackgroundColor="#E74C3C"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>